<div class="contact-preview">
  <div class="photo">
    <img src="{{photo}}" alt="{{name}}">
  </div>
  <div class="info">
    <table>
      <tr>
        <th>Name:</th>
        <td>{{name}}</td>
      </tr>
      <tr>
        <th>Phone:</th>
        <td>{{phone}}</td>
      </tr>
      <tr>
        <th>Email:</th>
        <td>{{email}}</td>
      </tr>
    </table>
  </div>
</div>
